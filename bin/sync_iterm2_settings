#!/bin/zsh

FILE_NAME="Glenn.json"
PROFILE_PATH="$HOME/Library/Application Support/iTerm2/DynamicProfiles/$FILE_NAME"

# FYI can be shortened to: [ -e file_name ] && rm file_name
if [ -e "$PROFILE_PATH" ]; then
    echo "Found existing iterm2 profile: ${FILE_NAME} - removing..."
    rm "$PROFILE_PATH"
else
    echo "No existing profile found"
fi

echo "Symlinking..."
ln -s "$DOTFILES/iterm2/$FILE_NAME" "$PROFILE_PATH"

echo "Done"
