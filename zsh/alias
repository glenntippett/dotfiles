alias cl="clear"

# Node
alias node-version-name="node -pe process.release.lts"

# Git
# https://github.com/Everduin94/better-commits
alias commit="better-commits"
alias branch="better-branch"
alias git-clean="git branch -vv | grep ': gone]' | grep -v '\*' | awk '{print $1}' | xargs -r git branch -D"

# Vim
alias nv="nvim"

# Tmux
alias tls="tmux ls"

# Other
alias timestamp="date +%s"
alias starwars="telnet towel.blinkenlights.nl"

alias mkd='dirFun() { mkdir -pv "$1"; cd "$1" }; dirFun '

alias random-password='openssl rand -base64 256 | tr -d '\n' | cut -c 1-256'

# Search files in current directory and open in selected editor
alias fd="fd-find"

alias ff="fzf --exclude node_modules --height 100% --layout reverse --info inline --border --preview 'batcat --color=always {}' --preview-window right,1,border-horizontal --bind 'ctrl-/:change-preview-window(50%|hidden|)' | xargs code -n ."
